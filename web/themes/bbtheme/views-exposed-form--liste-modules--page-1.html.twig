{#
/**
 * @file
 * Default theme implementation of a views exposed form.
 *
 * Available variables:
 * - form: A render element representing the form.
 *
 * @see template_preprocess_views_exposed_form()
 *
 * @ingroup themeable
 */
#}
{% if q is not empty %}
  {#
    This ensures that, if clean URLs are off, the 'q' is added first,
    as a hidden form element, so that it shows up first in the POST URL.
  #}
{{ q }}
{% endif %}

{% set small = ['co_anmo', 'co_tpla', 'co_camp', 'co_moda', 'items_per_page','co_tcan','co_offreur'] %}
{% set large = ['co_orie', 'lib', 'id_disp_1', 'co_modu','co_prac','co_prna','nomu','nomu_1'] %}

<details class="form-wrapper" id="searchcrit" {{ open }}>
  <summary><i class="fa fa-caret-right"></i> Options de recherche suppl√©mentaires</summary>
  <div id="insearchcrit">
    <div class="pure-g">
      {% for k,v in form %}
        {% if (k in small) %}
          <div class="pure-u-1-8"> {{v}} </div>
        {%endif%}
      {% endfor %}
    {# <div class="pure-u-1-6"> </div> #}
      {% for k,v in form %}
        {% if (k in large) %}
          <div class="pure-u-1-4"> {{v}} </div>
        {%endif%}
      {% endfor %}
    </div>
  </div>
</details>

{{ form | without('id_disp', 'resp_filter','actions','co_anmo', 'co_tpla', 'co_camp', 'items_per_page','co_orie', 'lib', 'id_disp_1', 'co_modu', 'co_moda','co_prac','co_prna','nomu','nomu_1','co_tcan','co_offreur') }}

<div class="pure-g">
    <div class="pure-u-1-6">
      {{form.id_disp}}
    </div>
    <div class="pure-u-1-4">
      {{form.resp_filter}}
    </div>
    <div class="pure-u-1-3">
      {{form.actions}}
    </div>
</div>
