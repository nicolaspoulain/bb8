{#
/**
 * @file
 * Default theme implementation of a views exposed form.
 *
 * Available variables:
 * - form: A render element representing the form.
 *
 * @see template_preprocess_views_exposed_form()
 *
 * @ingroup themeable
 */
#}
{% if q is not empty %}
  {#
    This ensures that, if clean URLs are off, the 'q' is added first,
    as a hidden form element, so that it shows up first in the POST URL.
  #}
{{ q }}
{% endif %}

<div class="pure-g">
    <div class="pure-u-1-6">
      {{form.id_disp}}
    </div>
    <div class="pure-u-1-4">
      {{form.resp_filter}}
    </div>
    <div class="pure-u-1-3">
      {{form.actions}}
    </div>
</div>

{# voir bbtheme.theme pour la variable open #}
<details class="form-wrapper" id="searchcrit" {{ open }}>
<summary>Options de recherche suppl√©mentaires</summary>
<div id="insearchcrit">

{% set principal = ['id_disp', 'resp_filter'] %}
{% set small = ['co_anmo', 'co_tpla', 'co_camp', 'items_per_page'] %}
{% set large = ['co_orie', 'lib', 'id_disp_1', 'co_modu'] %}
{% set unused = ['#action', '#id', '#form_id', '#type', '#defaults_loaded', '#method', '#validated', '#title_display', '#description_display', '#build_id','actions', '#sorted', '#render_children'] %}
{% set trash = unused|merge(small)|merge(large)|merge(principal) %}

<div class="pure-g">
  {% for k,v in form %}
    {% if (k in small) %}
    <div class="pure-u-1-8"> {{v}} </div>
    {%endif%}
  {% endfor %}
    <div class="pure-u-1-6"> {{v}} </div>

  {% for k,v in form %}
    {% if (k in large) %}
    <div class="pure-u-1-3"> {{v}} </div>
    {%endif%}
  {% endfor %}

  {% for k,v in form %}
    {% if (k not in trash) %}
      <div class="pure-u-1-3"> {{v}} </div>
    {%endif%}
  {%endfor%}
</div>
</div>

</details>

